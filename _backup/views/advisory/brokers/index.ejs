<%- include('../partials/header') %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
    <!-- Header -->
    <div class="bg-white border-b border-gray-200 sticky top-0 z-40">
        <div class="container mx-auto px-4 py-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
                        <i class="fas fa-link text-blue-600"></i>
                        Broker Integrations
                    </h1>
                    <p class="text-gray-600 mt-2">Connect your trading accounts and consolidate your portfolio</p>
                </div>
                <div class="flex gap-3">
                    <button id="syncAllBtn" class="btn btn-outline-primary flex items-center gap-2" <%= connectedBrokers.filter(b => b.isConnected).length === 0 ? 'disabled' : '' %>>
                        <i class="fas fa-sync-alt"></i>
                        Sync All
                    </button>
                    <button class="btn btn-primary flex items-center gap-2" onclick="showSupportedBrokers()">
                        <i class="fas fa-plus"></i>
                        Add Broker
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="container mx-auto px-4 py-8">
        <!-- Portfolio Summary -->
        <% if (consolidatedPortfolio && consolidatedPortfolio.summary.connectedBrokers > 0) { %>
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 mb-8">
            <div class="card glass-effect p-6">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-500 rounded-full flex items-center justify-center">
                        <i class="fas fa-chart-line text-white text-xl"></i>
                    </div>
                    <div>
                        <h3 class="text-2xl font-bold text-gray-900">₹<%= consolidatedPortfolio.totalValue.toLocaleString() %></h3>
                        <p class="text-gray-600">Total Portfolio Value</p>
                    </div>
                </div>
            </div>

            <div class="card glass-effect p-6">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-full flex items-center justify-center">
                        <i class="fas fa-coins text-white text-xl"></i>
                    </div>
                    <div>
                        <h3 class="text-2xl font-bold text-gray-900">₹<%= consolidatedPortfolio.totalInvested.toLocaleString() %></h3>
                        <p class="text-gray-600">Total Invested</p>
                    </div>
                </div>
            </div>

            <div class="card glass-effect p-6">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-gradient-to-r <%= consolidatedPortfolio.totalPnL >= 0 ? 'from-green-500 to-emerald-500' : 'from-red-500 to-pink-500' %> rounded-full flex items-center justify-center">
                        <i class="fas <%= consolidatedPortfolio.totalPnL >= 0 ? 'fa-arrow-up' : 'fa-arrow-down' %> text-white text-xl"></i>
                    </div>
                    <div>
                        <h3 class="text-2xl font-bold <%= consolidatedPortfolio.totalPnL >= 0 ? 'text-green-600' : 'text-red-600' %>">
                            <%= consolidatedPortfolio.totalPnL >= 0 ? '+' : '' %>₹<%= consolidatedPortfolio.totalPnL.toLocaleString() %>
                        </h3>
                        <p class="text-gray-600">Total P&L</p>
                    </div>
                </div>
            </div>

            <div class="card glass-effect p-6">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-violet-500 rounded-full flex items-center justify-center">
                        <i class="fas fa-building text-white text-xl"></i>
                    </div>
                    <div>
                        <h3 class="text-2xl font-bold text-gray-900"><%= consolidatedPortfolio.summary.connectedBrokers %></h3>
                        <p class="text-gray-600">Connected Brokers</p>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Connected Brokers Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            <% connectedBrokers.forEach(broker => { %>
            <div class="card glass-effect p-6 broker-card" data-broker-id="<%= broker.id %>">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center gap-3">
                        <div class="w-12 h-12 rounded-full flex items-center justify-center" style="background: <%= broker.color %>15; color: <%= broker.color %>">
                            <i class="<%= broker.icon %> text-xl"></i>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900"><%= broker.name %></h3>
                            <p class="text-sm text-gray-500">
                                <% if (broker.isConnected) { %>
                                    <span class="text-green-600"><i class="fas fa-circle text-xs"></i> Connected</span>
                                <% } else { %>
                                    <span class="text-gray-400"><i class="fas fa-circle text-xs"></i> Not Connected</span>
                                <% } %>
                            </p>
                        </div>
                    </div>
                    
                    <div class="flex items-center gap-2">
                        <% if (broker.status === 'coming_soon') { %>
                            <span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-xs rounded-full">Coming Soon</span>
                        <% } else if (broker.apiAvailable) { %>
                            <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">API</span>
                        <% } else { %>
                            <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs rounded-full">Manual</span>
                        <% } %>
                    </div>
                </div>

                <% if (broker.isConnected) { %>
                    <div class="space-y-3 mb-4">
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-600">Portfolio Value</span>
                            <span class="font-semibold text-gray-900">₹<%= broker.portfolioValue.toLocaleString() %></span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-600">Holdings</span>
                            <span class="font-semibold text-gray-900"><%= broker.holdingsCount %> stocks</span>
                        </div>
                        <% if (broker.lastSyncAt) { %>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-600">Last Synced</span>
                            <span class="text-sm text-gray-500"><%= new Date(broker.lastSyncAt).toLocaleDateString() %></span>
                        </div>
                        <% } %>
                    </div>

                    <div class="flex gap-2">
                        <% if (broker.type === 'manual') { %>
                            <button class="btn btn-sm btn-outline-primary flex-1" onclick="showImportForm('<%= broker.id %>')">
                                <i class="fas fa-upload mr-1"></i>
                                Import
                            </button>
                        <% } %>
                        <button class="btn btn-sm btn-outline-secondary" onclick="viewBrokerDetails('<%= broker.id %>')">
                            <i class="fas fa-eye mr-1"></i>
                            View
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="disconnectBroker('<%= broker.id %>')">
                            <i class="fas fa-unlink mr-1"></i>
                            Disconnect
                        </button>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <p class="text-gray-500 mb-4">Connect your <%= broker.name %> account to view portfolio data</p>
                        <% if (broker.status === 'coming_soon') { %>
                            <button class="btn btn-sm btn-secondary" disabled>
                                <i class="fas fa-clock mr-1"></i>
                                Coming Soon
                            </button>
                        <% } else { %>
                            <button class="btn btn-sm btn-primary" onclick="connectBroker('<%= broker.id %>')">
                                <i class="fas fa-link mr-1"></i>
                                Connect
                            </button>
                        <% } %>
                    </div>
                <% } %>
            </div>
            <% }) %>
        </div>

        <!-- No Brokers Connected Message -->
        <% if (connectedBrokers.filter(b => b.isConnected).length === 0) { %>
        <div class="text-center py-12">
            <div class="max-w-md mx-auto">
                <div class="w-24 h-24 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-link text-blue-600 text-3xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-4">No Brokers Connected</h3>
                <p class="text-gray-600 mb-6">Connect your trading accounts to view consolidated portfolio data, track performance, and get insights across all your investments.</p>
                <button class="btn btn-primary" onclick="showSupportedBrokers()">
                    <i class="fas fa-plus mr-2"></i>
                    Connect Your First Broker
                </button>
            </div>
        </div>
        <% } %>

        <!-- Portfolio Holdings (if any) -->
        <% if (consolidatedPortfolio && consolidatedPortfolio.holdings.length > 0) { %>
        <div class="card glass-effect">
            <div class="card-header border-0">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold text-gray-900">
                        <i class="fas fa-chart-pie text-blue-600 mr-2"></i>
                        Consolidated Holdings
                    </h2>
                    <span class="text-sm text-gray-500"><%= consolidatedPortfolio.holdings.length %> holdings</span>
                </div>
            </div>
            <div class="card-body">
                <div class="overflow-x-auto">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Stock</th>
                                <th>Exchange</th>
                                <th>Quantity</th>
                                <th>Avg Price</th>
                                <th>Current Price</th>
                                <th>Current Value</th>
                                <th>P&L</th>
                                <th>Return %</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% consolidatedPortfolio.holdings.slice(0, 10).forEach(holding => { %>
                            <tr>
                                <td>
                                    <div class="font-medium text-gray-900"><%= holding.tradingsymbol || holding.symbol %></div>
                                </td>
                                <td><%= holding.exchange %></td>
                                <td><%= holding.quantity %></td>
                                <td>₹<%= (holding.averagePrice || holding.avgPrice || 0).toFixed(2) %></td>
                                <td>₹<%= (holding.lastPrice || holding.currentPrice || 0).toFixed(2) %></td>
                                <td>₹<%= (holding.currentValue || 0).toLocaleString() %></td>
                                <td class="<%= (holding.pnl || holding.absoluteReturn || 0) >= 0 ? 'text-green-600' : 'text-red-600' %>">
                                    <%= (holding.pnl || holding.absoluteReturn || 0) >= 0 ? '+' : '' %>₹<%= (holding.pnl || holding.absoluteReturn || 0).toFixed(2) %>
                                </td>
                                <td class="<%= (holding.returnPercentage || 0) >= 0 ? 'text-green-600' : 'text-red-600' %>">
                                    <%= (holding.returnPercentage || 0) >= 0 ? '+' : '' %><%= (holding.returnPercentage || 0).toFixed(2) %>%
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <% if (consolidatedPortfolio.holdings.length > 10) { %>
                <div class="text-center mt-4">
                    <button class="btn btn-outline-primary" onclick="viewAllHoldings()">
                        View All <%= consolidatedPortfolio.holdings.length %> Holdings
                    </button>
                </div>
                <% } %>
            </div>
        </div>
        <% } %>
    </div>
</div>

<!-- Modals -->
<!-- Supported Brokers Modal -->
<div class="modal fade" id="supportedBrokersModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Supported Brokers</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row" id="supportedBrokersList">
                    <!-- Dynamically populated -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Connect Broker Modal -->
<div class="modal fade" id="connectBrokerModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Connect Broker</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="connectBrokerContent">
                <!-- Dynamically populated -->
            </div>
        </div>
    </div>
</div>

<!-- Import Portfolio Modal -->
<div class="modal fade" id="importPortfolioModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Import Portfolio</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="importPortfolioContent">
                <!-- Dynamically populated -->
            </div>
        </div>
    </div>
</div>

<script>
// Broker integration functionality
async function showSupportedBrokers() {
    try {
        const response = await fetch('/brokers/supported');
        const data = await response.json();
        
        if (data.success) {
            const brokersList = document.getElementById('supportedBrokersList');
            brokersList.innerHTML = '';
            
            data.data.forEach(broker => {
                const isComingSoon = broker.status === 'coming_soon';
                const brokerCard = `
                    <div class="col-md-6 mb-3">
                        <div class="card h-100 ${isComingSoon ? 'bg-light' : ''}">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="me-3">
                                        <i class="${broker.icon}" style="color: ${broker.color}; font-size: 1.5rem;"></i>
                                    </div>
                                    <div>
                                        <h6 class="card-title mb-0">${broker.name}</h6>
                                        <small class="text-muted">${broker.apiAvailable ? 'API Integration' : 'Manual Import'}</small>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    ${broker.features.map(feature => 
                                        `<span class="badge bg-secondary me-1 mb-1">${feature.replace('_', ' ')}</span>`
                                    ).join('')}
                                </div>
                                ${isComingSoon ? 
                                    `<button class="btn btn-sm btn-secondary" disabled>
                                        <i class="fas fa-clock me-1"></i>Coming Soon
                                    </button>` :
                                    `<button class="btn btn-sm btn-primary" onclick="connectBroker('${broker.id}')">
                                        <i class="fas fa-link me-1"></i>Connect
                                    </button>`
                                }
                            </div>
                        </div>
                    </div>
                `;
                brokersList.innerHTML += brokerCard;
            });
            
            const modal = new bootstrap.Modal(document.getElementById('supportedBrokersModal'));
            modal.show();
        }
    } catch (error) {
        console.error('Error loading supported brokers:', error);
        showToast('Error loading supported brokers', 'error');
    }
}

async function connectBroker(brokerId) {
    try {
        // Hide any open modals
        const modals = document.querySelectorAll('.modal.show');
        modals.forEach(modal => {
            const bsModal = bootstrap.Modal.getInstance(modal);
            if (bsModal) bsModal.hide();
        });

        // Load connection form
        const response = await fetch(`/brokers/${brokerId}/connect-form`);
        const html = await response.text();
        
        document.getElementById('connectBrokerContent').innerHTML = html;
        
        const modal = new bootstrap.Modal(document.getElementById('connectBrokerModal'));
        modal.show();
    } catch (error) {
        console.error('Error loading connect form:', error);
        showToast('Error loading connection form', 'error');
    }
}

async function disconnectBroker(brokerId) {
    if (!confirm('Are you sure you want to disconnect this broker? Your portfolio data will be removed.')) {
        return;
    }

    try {
        showLoading('Disconnecting broker...');
        
        const response = await fetch(`/brokers/${brokerId}/disconnect`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });
        
        const data = await response.json();
        
        if (data.success) {
            showToast('Broker disconnected successfully', 'success');
            setTimeout(() => location.reload(), 1500);
        } else {
            showToast(data.error || 'Failed to disconnect broker', 'error');
        }
    } catch (error) {
        console.error('Error disconnecting broker:', error);
        showToast('Error disconnecting broker', 'error');
    } finally {
        hideLoading();
    }
}

async function showImportForm(brokerId) {
    try {
        const response = await fetch(`/brokers/${brokerId}/import-form`);
        const html = await response.text();
        
        document.getElementById('importPortfolioContent').innerHTML = html;
        
        const modal = new bootstrap.Modal(document.getElementById('importPortfolioModal'));
        modal.show();
    } catch (error) {
        console.error('Error loading import form:', error);
        showToast('Error loading import form', 'error');
    }
}

async function syncAllBrokers() {
    try {
        showLoading('Syncing all brokers...');
        
        const response = await fetch('/brokers/sync-all', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });
        
        const data = await response.json();
        
        if (data.success) {
            showToast(`Synced ${data.data.syncedBrokers} broker(s) successfully`, 'success');
            setTimeout(() => location.reload(), 1500);
        } else {
            showToast(data.error || 'Failed to sync brokers', 'error');
        }
    } catch (error) {
        console.error('Error syncing brokers:', error);
        showToast('Error syncing brokers', 'error');
    } finally {
        hideLoading();
    }
}

function viewBrokerDetails(brokerId) {
    // Navigate to detailed broker view
    window.location.href = `/portfolio?broker=${brokerId}`;
}

function viewAllHoldings() {
    // Navigate to detailed holdings view
    window.location.href = '/portfolio/holdings';
}

// Event listeners
document.addEventListener('DOMContentLoaded', function() {
    // Sync all button
    const syncAllBtn = document.getElementById('syncAllBtn');
    if (syncAllBtn) {
        syncAllBtn.addEventListener('click', syncAllBrokers);
    }
});
</script>

<%- include('../partials/footer') %>