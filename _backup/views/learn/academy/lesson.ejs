<div class="lesson-container">
    <!-- Lesson Header -->
    <div class="lesson-header">
        <div class="lesson-breadcrumb">
            <a href="/academy" class="breadcrumb-link">
                <i class="fas fa-graduation-cap"></i>
                Trading Academy
            </a>
            <i class="fas fa-chevron-right"></i>
            <a href="/academy/section/<%= section.id %>" class="breadcrumb-link">
                <%= section.title %>
            </a>
            <i class="fas fa-chevron-right"></i>
            <span class="current-lesson"><%= lesson.title %></span>
        </div>
        
        <div class="lesson-title-section">
            <h1 class="lesson-title"><%= lesson.title %></h1>
            <div class="lesson-meta">
                <span class="lesson-duration">
                    <i class="fas fa-clock"></i>
                    ~15 mins
                </span>
                <span class="lesson-type">
                    <i class="fas fa-video"></i>
                    Video Lesson
                </span>
                <button class="btn btn-outline-primary btn-sm mark-complete-btn">
                    <i class="fas fa-check"></i>
                    Mark Complete
                </button>
            </div>
        </div>
    </div>

    <!-- Lesson Content -->
    <div class="lesson-content">
        <!-- Video Placeholder -->
        <div class="video-container">
            <div class="video-placeholder">
                <div class="play-button">
                    <i class="fas fa-play"></i>
                </div>
                <div class="video-info">
                    <h3><%= lesson.title %></h3>
                    <p>Click to start the lesson</p>
                </div>
            </div>
        </div>

        <!-- Lesson Text Content -->
        <div class="content-section">
            <% if (content.introduction) { %>
                <div class="content-block">
                    <h2>Introduction</h2>
                    <p><%= content.introduction %></p>
                </div>
            <% } %>

            <% if (content.keyPoints && content.keyPoints.length > 0) { %>
                <div class="content-block">
                    <h2>Key Points</h2>
                    <ul class="key-points-list">
                        <% content.keyPoints.forEach(point => { %>
                            <li>
                                <i class="fas fa-check-circle"></i>
                                <%= point %>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            <% } %>

            <% if (content.phases && content.phases.length > 0) { %>
                <div class="content-block">
                    <h2>Market Phases</h2>
                    <div class="phases-grid">
                        <% content.phases.forEach((phase, index) => { %>
                            <div class="phase-card">
                                <div class="phase-number"><%= index + 1 %></div>
                                <h3><%= phase.title %></h3>
                                <p><%= phase.description %></p>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% } %>

            <% if (content.types && content.types.length > 0) { %>
                <div class="content-block">
                    <h2>Types of Smart Money Activity</h2>
                    <div class="types-grid">
                        <% content.types.forEach(type => { %>
                            <div class="type-card">
                                <h3><%= type.title %></h3>
                                <p><%= type.description %></p>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% } %>

            <% if (content.locations && content.locations.length > 0) { %>
                <div class="content-block">
                    <h2>Common Liquidity Locations</h2>
                    <div class="locations-grid">
                        <% content.locations.forEach(location => { %>
                            <div class="location-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <%= location %>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% } %>

            <% if (content.note) { %>
                <div class="content-block note-block">
                    <div class="note-icon">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <div class="note-content">
                        <h3>Note</h3>
                        <p><%= content.note %></p>
                    </div>
                </div>
            <% } %>

            <!-- Interactive Elements -->
            <div class="content-block">
                <h2>Practice Exercise</h2>
                <div class="exercise-card">
                    <div class="exercise-icon">
                        <i class="fas fa-tasks"></i>
                    </div>
                    <div class="exercise-content">
                        <h3>Apply What You've Learned</h3>
                        <p>Open your trading platform and try to identify the concepts learned in this lesson on a live chart. Look for the patterns and structures discussed.</p>
                        <button class="btn btn-primary exercise-btn">
                            <i class="fas fa-external-link-alt"></i>
                            Open TradingView
                        </button>
                    </div>
                </div>
            </div>

            <!-- Quiz Section -->
            <div class="content-block">
                <h2>Quick Quiz</h2>
                <div class="quiz-container">
                    <div class="question-card">
                        <h4>Question 1: What is the main objective of Smart Money?</h4>
                        <div class="quiz-options">
                            <label class="quiz-option">
                                <input type="radio" name="q1" value="a">
                                <span>To help retail traders make money</span>
                            </label>
                            <label class="quiz-option">
                                <input type="radio" name="q1" value="b">
                                <span>To accumulate and distribute positions efficiently</span>
                            </label>
                            <label class="quiz-option">
                                <input type="radio" name="q1" value="c">
                                <span>To create market volatility</span>
                            </label>
                        </div>
                    </div>
                    <button class="btn btn-primary quiz-submit">Submit Quiz</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Lesson Navigation -->
    <div class="lesson-navigation">
        <div class="nav-section">
            <h3>Continue Learning</h3>
            <div class="nav-buttons">
                <% const currentIndex = section.lessons.findIndex(l => l.id === lesson.id); %>
                <% if (currentIndex > 0) { %>
                    <a href="/academy/lesson/<%= section.id %>/<%= section.lessons[currentIndex - 1].id %>" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Previous Lesson
                    </a>
                <% } %>
                
                <% if (currentIndex < section.lessons.length - 1) { %>
                    <a href="/academy/lesson/<%= section.id %>/<%= section.lessons[currentIndex + 1].id %>" class="btn btn-primary">
                        Next Lesson
                        <i class="fas fa-arrow-right"></i>
                    </a>
                <% } else { %>
                    <a href="/academy" class="btn btn-success">
                        <i class="fas fa-trophy"></i>
                        Back to Academy
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</div>

