        grid-template-columns: 1fr;
    }
    
    .exercise-card {
        flex-direction: column;
        text-align: center;
    }
    
    .nav-buttons {
        flex-direction: column;
        align-items: center;
    }
}
</style>

<script>
// Mark lesson as complete
document.querySelector('.mark-complete-btn').addEventListener('click', function() {
    const btn = this;
    
    // Simulate API call
    setTimeout(() => {
        btn.classList.add('completed');
        btn.innerHTML = '<i class="fas fa-check"></i> Completed';
        
        // Show success message
        showToast('Lesson marked as complete!', 'success');
    }, 500);
});

// Exercise button
document.querySelector('.exercise-btn').addEventListener('click', function() {
    window.open('https://www.tradingview.com/', '_blank');
});

// Quiz functionality
document.querySelector('.quiz-submit').addEventListener('click', function() {
    const selectedAnswer = document.querySelector('input[name="q1"]:checked');
    
    if (!selectedAnswer) {
        showToast('Please select an answer', 'warning');
        return;
    }
    
    if (selectedAnswer.value === 'b') {
        showToast('Correct! Smart Money aims to accumulate and distribute efficiently.', 'success');
    } else {
        showToast('Not quite right. Smart Money\'s main objective is to accumulate and distribute positions efficiently.', 'error');
    }
});

// Video placeholder click
document.querySelector('.video-placeholder').addEventListener('click', function() {
    showToast('Video content would start playing here', 'info');
});

// Toast notification function
function showToast(message, type = 'info') {
    const toast = document.createElement('div');
    toast.className = `toast toast-${type}`;
    toast.innerHTML = `
        <div class="toast-content">
            <i class="fas fa-${type === 'success' ? 'check' : type === 'error' ? 'times' : type === 'warning' ? 'exclamation' : 'info'}-circle"></i>
            <span>${message}</span>
        </div>
    `;
    
    toast.style.cssText = `
        position: fixed;
        top: 20px;
        right: 20px;
        background: var(--${type === 'success' ? 'success' : type === 'error' ? 'danger' : type === 'warning' ? 'warning' : 'secondary'});
        color: white;
        padding: 1rem 1.5rem;
        border-radius: 8px;
        z-index: 1000;
        transform: translateX(400px);
        transition: transform 0.3s ease;
        max-width: 300px;
    `;
    
    document.body.appendChild(toast);
    
    setTimeout(() => {
        toast.style.transform = 'translateX(0)';
    }, 100);
    
    setTimeout(() => {
        toast.style.transform = 'translateX(400px)';
        setTimeout(() => {
            document.body.removeChild(toast);
        }, 300);
    }, 3000);
}

// Progress tracking
const lessonId = '<%= lesson.id %>';
const sectionId = '<%= section.id %>';

// Auto-save progress periodically
setInterval(() => {
    // In a real app, this would call the progress API
    console.log('Auto-saving progress for lesson:', lessonId);
}, 30000);
</script>